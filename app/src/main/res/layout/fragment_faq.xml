<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rnb.pcbuilder.FAQFragment"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="2dp">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FAQ"
        android:id="@+id/textView4"
        android:textSize="@dimen/titleText"
        android:gravity="center_horizontal"
        android:textColor="@color/textColor"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do I need an i7 for gaming?"
        android:id="@+id/textView5"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No, an i5 is more than efficient for gaming"
        android:id="@+id/textView6"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How much does the average PC cost?"
        android:id="@+id/textView7"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Everyone will have a different budget, but from $500 to $2000"
        android:id="@+id/textView8"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Which GPU should I buy?"
        android:id="@+id/textView9"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Go with the best GPU you can comfortably afford"
        android:id="@+id/textView11"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Is building my own PC difficult?"
        android:id="@+id/textView10"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="It seems intimidating but actually very easy, think of legos with wires!"
        android:id="@+id/textView13"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do I need a SSD?"
        android:id="@+id/textView14"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No, but they are awesome"
        android:id="@+id/textView15"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Is gaming better on a console or PC?"
        android:id="@+id/textView12"
        android:textSize="18dp"
        android:paddingTop="@dimen/titleMargin"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Generally the PC will outperform a console of the same price. "
        android:id="@+id/textView16"
        android:textSize="16dp" />

</LinearLayout>
